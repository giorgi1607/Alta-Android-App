<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25252D"
    android:backgroundTint="#25252D"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".fragments.main_fragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/alta_logo_25_221_37" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/banner_recyclerxml"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#25252D"
                android:backgroundTint="#25252D"
                android:elevation="10dp"
                android:padding="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:backgroundTint="#25252D"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="#25252D"
                        android:backgroundTint="#25252D"
                        android:gravity="center"
                        android:text="აირჩიეთ კატეგორია"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#25252D"
                        android:fadeScrollbars="false"
                        android:scrollbarThumbHorizontal="@color/white"
                        android:scrollbarThumbVertical="@color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#FFFFFF"
                            android:backgroundTint="#25252D"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:backgroundTint="#25252D"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="7dp"
                                    android:layout_weight="1"
                                    android:elevation="20dp"
                                    android:padding="0dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="20dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <ImageButton
                                            android:id="@+id/category_notebookbtn"
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:background="@drawable/notebooks"
                                            tools:ignore="SpeakableTextPresentCheck" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="6dp"
                                            android:gravity="center"
                                            android:text="ნოუთბუქები"
                                            android:textColor="#000000"
                                            android:textSize="12sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="right"
                                    android:layout_margin="0dp"
                                    android:layout_weight="1"
                                    android:elevation="20dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="20dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <ImageButton
                                            android:id="@+id/category_phonebtnn"
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:background="@drawable/smartphones" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="6dp"
                                            android:gravity="center"
                                            android:text="სმარტფონები"
                                            android:textColor="#000000"
                                            android:textSize="12sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:backgroundTint="#25252D"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="7dp"
                                    android:layout_weight="1"
                                    android:elevation="20dp"
                                    android:padding="0dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="20dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <ImageButton
                                            android:id="@+id/category_kitchen"
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:background="@drawable/ha"
                                            tools:ignore="SpeakableTextPresentCheck" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="6dp"
                                            android:gravity="center"
                                            android:text="სამზარეულოს ტექნიკა"
                                            android:textColor="#000000"
                                            android:textSize="12sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="right"
                                    android:layout_margin="0dp"
                                    android:layout_weight="1"
                                    android:elevation="20dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="20dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <ImageButton
                                            android:id="@+id/category_split"
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:background="@drawable/phone"
                                            tools:ignore="SpeakableTextPresentCheck" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="6dp"
                                            android:gravity="center"
                                            android:text="სპლიტ სისტემები"
                                            android:textColor="#000000"
                                            android:textSize="12sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#25252D"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="აღმოაჩინეთ რამე ახალი "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mainfragmet_itemrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>